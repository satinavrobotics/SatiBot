<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/robotTypeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Robot Type: "
        android:padding="8dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/robotTypeInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="N/A"
        android:padding="8dp"
        android:textColor="@android:color/black" />

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_margin="8dp"
        android:alpha="0.5"
        android:background="@drawable/button_item_background_black" />

    <ImageView
        android:id="@+id/robot_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/openbot_icon" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_margin="8dp"
        android:alpha="0.5"
        android:background="@drawable/button_item_background_black" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/voltage_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:text="Voltage Divider" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sonar_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:text="Sonar" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/indicator_leds_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:text="Indicator LEDs" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/front_leds_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:text="Front LEDs" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/back_leds_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:text="Back LEDs" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/status_leds_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:text="Status LEDs" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/bumpers_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:text="Bumpers" />
</LinearLayout>